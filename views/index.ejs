    <style>
        /* HERO */
        .hero-section {
            background: linear-gradient(135deg, #4A90E2, #50C9C3);
            color: white;
            padding: 80px 20px;
            text-align: center;
            border-radius: 10px;
            margin-bottom: 60px;
        }

        .hero-section h1 {
            font-size: 2.8rem;
            font-weight: 700;
        }

        /* CARDS */
        .service-card,
        .feature-card,
        .pricing-card {
            background: white;
            border-radius: 16px;
            padding: 30px;
            box-shadow: 0 5px 18px rgba(0, 0, 0, 0.1);
            transition: 0.3s;
            margin: 15px 0;
            text-align: center;
        }

        .service-card:hover,
        .feature-card:hover,
        .pricing-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 10px 28px rgba(0, 0, 0, 0.15);
        }

        /* BUTTONS */
        .pay-btn {
            width: 100%;
            padding: 12px;
            font-size: 1.1rem;
            border-radius: 10px;
            border: none;
            cursor: pointer;
            transition: 0.2s;
        }

        .stripe-btn {
            background: #6772e5;
            color: white;
        }

        .stripe-btn:hover {
            background: #5469d4;
        }

        .telebirr-btn {
            background: #FDB913;
            color: black;
        }

        .telebirr-btn:hover {
            background: #e4a80f;
        }

        .translate-btn {
            margin-top: 20px;
            display: inline-block;
            font-size: 1rem;
            padding: 8px 14px;
            border-radius: 6px;
            background: #4A90E2;
            color: #fff;
