<%- include("partials/header", { title: "Contact Us" }) %>

    <style>
        .contact-hero {
            background: linear-gradient(135deg, #4A90E2, #50C9C3);
            color: white;
            padding: 70px 20px;
            text-align: center;
            border-radius: 10px;
            margin-bottom: 40px;
        }

        .contact-hero h1 {
            font-size: 2.7rem;
            font-weight: 700;
        }

        .info-box {
            background: #fff;
            border-radius: 16px;
            padding: 30px;
            box-shadow: 0 6px 18px rgba(0, 0, 0, 0.08);
            margin-bottom: 25px;
            transition: 0.3s ease;
        }

        .info-box:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 28px rgba(0, 0, 0, 0.13);
        }

        .info-icon {
            font-size: 2.3rem;
            color: #4A90E2;
            margin-bottom: 12px;
        }

        .contact-btn {
            background: #4A90E2;
            color: white;
            padding: 12px 26px;
            border-radius: 10px;
            font-weight: 600;
            border: none;
            width: 100%;
            transition: .3s;
        }

        .contact-btn:hover {
            background: #357ABD;
        }

        .map-container iframe {
            width: 100%;
            height: 350px;
            border: none;
            border-radius: 12px;
            margin-top: 20px;
        }

        .map-box {
            position: relative;
            width: 100%;
            height: 380px;
            overflow: hidden;
            border-radius: 16px;
            box-shadow: 0 8px 22px rgba(0, 0, 0, 0.15);
        }

        .map-box iframe {
            width: 100%;
            height: 100%;
            border: none;
        }

        /* Animated Pin */
        .map-pin {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -75%);
            font-size: 2.4rem;
            animation: bounce 1.4s infinite;
            pointer-events: none;
        }

        @keyframes bounce {

            0%,
            100% {
                transform: translate(-50%, -75%);
            }

            50% {
                transform: translate(-50%, -85%);
            }
        }

        /* Fix tight spacing in contact form */
        .contact-form .form-label {
            font-weight: 600;
            margin-bottom: 6px !important;
        }

        .contact-form .form-control {
            margin-bottom: 20px !important;
            padding: 12px 14px !important;
            border-radius: 10px !important;
        }

        .contact-form textarea.form-control {
            min-height: 140px;
        }

        .contact-btn {
            margin-top: 10px !important;
        }
    </style>

    <div class="container">

        <!-- HERO -->
        <div class="contact-hero">
            <h1>Contact RealEstate Rentals</h1>
            <p>We're here to help you with your rental needs. Reach out anytime!</p>
        </div>

        <!-- CONTACT INFORMATION -->
        <div class="row mb-5">
            <div class="col-md-4">
                <div class="info-box text-center">
                    <div class="info-icon">üìß</div>
                    <h4>Email Us</h4>
                    <p>support@ferfam.com</p>
                </div>
            </div>

            <div class="col-md-4">
                <div class="info-box text-center">
                    <div class="info-icon">üìû</div>
                    <h4>Phone</h4>
                    <p>+251-980-672-822</p>
                    <p><a href="tel:+251980672822">Call Us</a></p>
                    <p>+1 (703) 678-7640</p>
                </div>
            </div>

            <div class="col-md-4">
                <div class="info-box text-center">
                    <div class="info-icon">üìç</div>
                    <h4>Location</h4>
                    <p>Meskel Flower, Addis Ababa, Ethiopia Bole</p>
                </div>
            </div>
        </div>

        <!-- CONTACT FORM -->
        <div class="row mb-5">
            <div class="col-md-7">
                <h3>Send Us a Message</h3>
                <p class="text-muted">Have questions or need assistance? Write to us below.</p>

                <form action="/contact/send" method="POST" class="contact-form">

                    <div class="mb-3">
                        <label class="form-label">Your Name</label>
                        <input type="text" class="form-control" name="name" required>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Your Email</label>
                        <input type="email" class="form-control" name="email" required>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Message</label>
                        <textarea class="form-control" name="message" rows="6" required></textarea>
                    </div>

                    <button type="submit" class="contact-btn">Send Message</button>

                </form>

            </div>

            <!-- MAP -->
            <div class="col-md-5">
                <h3>Find Us</h3>
                <div class="map-box">
                    <iframe
                        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3940.5587770990337!2d38.75774707491961!3d9.00941698919564!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x164b85eeabaff09f%3A0x8f8f36e6a4bb7a57!2sMeskel%20Flower!5e0!3m2!1sen!2set!4v1700000000001"
                        loading="lazy" allowfullscreen="">
                    </iframe>

                    <!-- Animated pin -->
                    <div class="map-pin">üìç</div>
                </div>
            </div>

        </div>

        <%- include("partials/footer") %>