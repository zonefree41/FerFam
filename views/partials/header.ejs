<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>
        <%= title %> | Ferfam
    </title>
    <link rel="stylesheet" href="/styles.css" />
</head>

<style>
    button.translate-btn {
        background: aqua;
        border: none;
        padding: 8px 12px;
        border-radius: 5px;
        cursor: pointer;
        font-size: 0.9rem;
        transition: background 0.3s;
    }

    /* NAVBAR BASE */
    .navbar {
        background: #fff;
        padding: 15px 20px;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
        position: relative;
        z-index: 9999;
    }

    .nav-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .nav-logo a {
        color: #4A90E2;
        font-size: 1.6rem;
        font-weight: 700;
        text-decoration: none;
    }

    /* HAMBURGER ICON */
    .hamburger {
        width: 30px;
        height: 24px;
        cursor: pointer;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    .hamburger span {
        height: 4px;
        background: #333;
        border-radius: 2px;
        transition: .3s ease;
    }

    /* SLIDE MENU */
    .mobile-menu {
        position: fixed;
        top: 0;
        right: -260px;
        width: 260px;
        height: 100%;
        background: #fff;
        padding-top: 80px;
        padding-left: 20px;
        list-style: none;
        box-shadow: -3px 0 12px rgba(0, 0, 0, 0.15);
        transition: .4s ease;
        display: flex;
        flex-direction: column;
        gap: 22px;
        z-index: 99999;
    }

    .mobile-menu li a {
        text-decoration: none;
        font-size: 1.2rem;
        color: #333;
        font-weight: 600;
        transition: .2s ease;
    }

    .mobile-menu li a.active,
    .mobile-menu li a:hover {
        color: #4A90E2;
    }

    /* OVERLAY BEHIND MENU */
    .overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.45);
        display: none;
        z-index: 9990;
    }

    /* MENU OPEN STATE */
    .mobile-menu.open {
        right: 0;
    }

    .overlay.show {
        display: block;
    }

    /* HAMBURGER ANIMATION ‚Üí X */
    .hamburger.active span:nth-child(1) {
        transform: rotate(45deg) translate(6px, 6px);
    }

    .hamburger.active span:nth-child(2) {
        opacity: 0;
    }

    .hamburger.active span:nth-child(3) {
        transform: rotate(-45deg) translate(6px, -6px);
    }
</style>

<body>
    <header>
        <div class="header-container">
            <div class="logo-section">
                <img src="/images/real-estate.avif" alt="Ferfam" class="logo" />
                <h1>Ferfam</h1>
            </div>
            <!-- TRANSLATE SECTION -->
            <div class="text-center mt-4">
                <a href="/lang/am" class="translate-btn">
                    üåê <%= __("translate") %>
                </a>
                <div id="google_translate_element" class="mt-3"></div>
            </div>

            <!-- GOOGLE TRANSLATE -->
            <script>
                function googleTranslateElementInit() {
                    new google.translate.TranslateElement({
                        pageLanguage: 'en',
                        includedLanguages: 'en,am',
                        layout: google.translate.TranslateElement.InlineLayout.SIMPLE
                    }, 'google_translate_element');
                }
            </script>

            <script src="//translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>

            <nav class="navbar">
                <div class="nav-container">

                    <!-- HAMBURGER -->
                    <div class="hamburger" id="hamburger">
                        <span></span>
                        <span></span>
                        <span></span>
                    </div>

                    <!-- MOBILE MENU OVERLAY -->
                    <div class="overlay" id="overlay"></div>

                    <!-- MOBILE SLIDE MENU -->
                    <ul class="mobile-menu" id="mobileMenu">
                        <li><a href="/" class="<%= currentPath === '/' ? 'active' : '' %>">Home</a></li>
                        <li><a href="/about" class="<%= currentPath === '/about' ? 'active' : '' %>">About</a></li>
                        <li><a href="/contact" class="<%= currentPath === '/contact' ? 'active' : '' %>">Contact</a>
                        </li>
                        <li><a href="/housetour" class="<%= currentPath === '/housetour' ? 'active' : '' %>">House
                                Tour</a></li>
                        <li><a href="/start-now" class="<%= currentPath === '/start-now' ? 'active' : '' %>">Start
                                Now</a></li>
                    </ul>
                </div>
            </nav>

            <script>
                const hamburger = document.getElementById("hamburger");
                const mobileMenu = document.getElementById("mobileMenu");
                const overlay = document.getElementById("overlay");

                hamburger.addEventListener("click", () => {
                    hamburger.classList.toggle("active");
                    mobileMenu.classList.toggle("open");
                    overlay.classList.toggle("show");
                });

                overlay.addEventListener("click", () => {
                    hamburger.classList.remove("active");
                    mobileMenu.classList.remove("open");
                    overlay.classList.remove("show");
                });
            </script>

        </div>
    </header>
    <main>